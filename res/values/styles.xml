<resources>
	<style
		name="ClassmateBaseTheme"
		parent="android:Theme.Light"
	>
	</style>

	<style
		name="ClassmateTheme"
		parent="ClassmateBaseTheme"
	>
	</style>

	<style
		name="ClassmateButton"
		parent="@android:style/Widget.Holo.Button"
	>
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_marginTop">10dip</item>
	</style>

	<style
		name="ClassmateButtonSmall"
		parent="@android:style/Widget.Holo.Button.Small"
	>
		<item name="android:textColor">@color/white</item>
	</style>

	<style
		name="ClassmateTextView"
		parent="@android:style/Widget.Holo.TextView"
	>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style
		name="ClassmateEditText"
		parent="@android:style/Widget.Holo.EditText"
	>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style
		name="ClassmateEditText_Form"
		parent="ClassmateEditText"
	>
		<item name="android:layout_marginBottom">20dip</item>
		<item name="android:layout_marginTop">5dip</item>
	</style>

	<style
		name="ClassmateEditText_Username"
		parent="ClassmateEditText_Form"
	>
		<item name="android:inputType">textPersonName</item>
		<item name="android:hint">@string/usernameExample</item>
	</style>

	<style
		name="ClassmateEditText_Email"
		parent="ClassmateEditText_Form"
	>
		<item name="android:inputType">textEmailAddress</item>
		<item name="android:hint">@string/emailExample</item>
	</style>

	<style
		name="ClassmateEditText_Password"
		parent="ClassmateEditText_Form"
	>
		<item name="android:inputType">textPassword</item>
		<item name="android:hint">@string/passwordExample</item>
	</style>

	<style
		name="ClassmateCheckBox"
		parent="@android:style/Widget.Holo.CompoundButton.CheckBox"
	>
		<item name="android:textColor">@color/cppgold</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_marginBottom">5dip</item>
		<item name="android:layout_marginTop">5dip</item>
	</style>
</resources>