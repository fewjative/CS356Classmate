<resources>
	<style
		name="ClassmateBaseTheme"
		parent="android:Theme.Light"
	>
		<!---->
	</style>

	<style
		name="ClassmateTheme"
		parent="ClassmateBaseTheme"
	>
		<!---->
	</style>

	<style
		name="ClassmateButton"
		parent="@android:style/Widget.Holo.Button"
	>
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_marginTop">10dip</item>
	</style>

	<style
		name="ClassmateTextView"
		parent="@android:style/Widget.Holo.TextView"
	>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/cppgold</item>
	</style>

	<style
		name="ClassmateEditText"
		parent="@android:style/Widget.Holo.EditText"
	>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_marginBottom">20dip</item>
		<item name="android:layout_marginTop">5dip</item>
	</style>

	<style
		name="ClassmateEditText_Username"
		parent="ClassmateEditText"
	>
		<item name="android:inputType">textEmailAddress</item>
		<item name="android:hint">@string/usernameExample</item>
	</style>

	<style
		name="ClassmateEditText_Password"
		parent="ClassmateEditText"
	>
		<item name="android:inputType">textPassword</item>
		<item name="android:hint">@string/passwordExample</item>
	</style>

	<style
		name="ClassmateCheckBox"
		parent="@android:style/Widget.Holo.CompoundButton.CheckBox"
	>
		<item name="android:textColor">@color/cppgold</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_marginBottom">5dip</item>
		<item name="android:layout_marginTop">5dip</item>
	</style>

	<style name="GenericProgressBackground" parent="android:Theme">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">#DD111111</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:indeterminate">true</item>
	</style>
</resources>