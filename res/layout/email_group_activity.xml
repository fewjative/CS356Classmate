<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/cppgreen"
	>
		<LinearLayout
			android:padding="10dip"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
		>
			<TextView
				style="@style/ClassmateTextView"
				android:text="Subject"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/etEmailSubject"
			/>
			<EditText
				style="@style/ClassmateEditText_Email"
				android:id="@+id/etEmailSubject"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			/>
			<TextView
				style="@style/ClassmateTextView"
				android:text="Message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/etEmailMessage"
			/>
			<EditText
				style="@style/ClassmateEditText_Username"
				android:id="@+id/etEmailMessage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textMultiLine"
			/>
			
			<TextView
				style="@style/ClassmateTextView"
				android:id="@+id/tvSubjMessage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:gravity="center"
			/>
			
			<Button
				style="@style/ClassmateButton"
				android:id="@+id/btnSendEmail"
				android:text="Send Email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			/>
		</LinearLayout>
	</RelativeLayout>
</ScrollView>