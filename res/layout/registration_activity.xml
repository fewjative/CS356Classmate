<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fillViewport="true"
>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/polygreen"
	>
		<!-- Footer Start -->
		<LinearLayout
			android:id="@+id/footer"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="5dip"
			android:layout_alignParentBottom="true"
			android:background="@color/polygreen"
		>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="@string/credits"
				android:textColor="@color/white"
			/>
		</LinearLayout>
		<!-- Footer Ends -->

		<!-- Login Form -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:background="@color/polygreen"
		>
			<!--  UserName Label -->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/polyyellow"
				android:text="@string/username"
				android:textSize="18sp"
			/>

			<EditText
				android:id="@+id/etUserName"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="20dip"
				android:layout_marginTop="5dip"
				android:singleLine="true"
				android:textColor="@color/white"
				android:inputType="textEmailAddress"
				android:hint="@string/usernameExample"
			/>

			<!--  Password Label -->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/polyyellow"
				android:text="@string/password"
				android:textSize="18sp"
			/>
			<EditText
				android:id="@+id/etPassword"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="20dip"
				android:singleLine="true"
				android:inputType="textPassword"
				android:hint="@string/passwordExample"
				android:textColor="@color/white"
			/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/polyyellow"
				android:text="@string/confirmpassword"
				android:textSize="18sp"
			/>
			<EditText
				android:id="@+id/etConfirmPassword"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:singleLine="true"
				android:password="true"
				android:inputType="textPassword"
				android:hint="@string/passwordExample"
				android:textColor="@color/white"
			/>
			<TextView
				android:id="@+id/tvPasswordMatcher"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:gravity="center"
			/>
			<CheckBox
				android:id="@+id/cbRememberMe"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:text="@string/stayloggedin"
				android:textColor="@color/polyyellow"
				android:textSize="18sp"
				android:checked="true"
			/>
			<!-- Register Button -->
			<Button
				style="@style/ClassmateButton"
				android:id="@+id/btnRegister"
				android:text="@string/register"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dip"
			/>
		</LinearLayout>
		<!-- Login Form Ends -->
	</RelativeLayout>
</ScrollView>