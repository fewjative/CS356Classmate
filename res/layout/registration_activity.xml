<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/cppgreen"
	>
		<LinearLayout
			android:padding="10dip"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
		>
			<TextView
				style="@style/ClassmateTextView"
				android:text="@string/email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/etEmailAddress"
			/>
			<EditText
				style="@style/ClassmateEditText_Email"
				android:id="@+id/etEmailAddress"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			/>
			<TextView
				style="@style/ClassmateTextView"
				android:text="@string/username"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/etUsername"
			/>
			<EditText
				style="@style/ClassmateEditText_Username"
				android:id="@+id/etUsername"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			/>
			<TextView
				style="@style/ClassmateTextView"
				android:text="@string/password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/etPassword"
			/>
			<EditText
				style="@style/ClassmateEditText_Password"
				android:id="@+id/etPassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			/>
			<TextView
				style="@style/ClassmateTextView"
				android:text="@string/confirmpassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/etConfirmPassword"
			/>
			<EditText
				style="@style/ClassmateEditText_Password"
				android:id="@+id/etConfirmPassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			/>
			<TextView
				style="@style/ClassmateTextView"
				android:id="@+id/tvPasswordMatcher"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:gravity="center"
			/>
			<CheckBox
				style="@style/ClassmateCheckBox"
				android:id="@+id/cbRememberMe"
				android:text="@string/stayloggedin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			/>
			<Button
				style="@style/ClassmateButton"
				android:id="@+id/btnRegister"
				android:text="@string/register"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			/>
		</LinearLayout>
	</RelativeLayout>
</ScrollView>