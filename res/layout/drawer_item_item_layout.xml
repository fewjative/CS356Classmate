<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/nd_item_size"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:paddingLeft="12dp"
	android:paddingRight="12dp"
>
	<ImageView
		android:id="@+id/ivIcon"
		android:layout_width="@dimen/nd_item_size"
		android:layout_height="@dimen/nd_item_size"
		android:scaleType="fitXY"
		android:layout_marginRight="6dp"
	/>

	<TextView
		android:id="@+id/tvTitle"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:layout_weight="1"
		android:minHeight="?android:attr/listPreferredItemHeightSmall"
		android:textAppearance="?android:attr/textAppearanceListItemSmall"
		android:textColor="@color/drawer_item_text"
	/>

	<TextView
		android:id="@+id/tvCounter"
		android:layout_width="@dimen/nd_notification_size"
		android:layout_height="@dimen/nd_notification_size"
		android:background="@drawable/drawer_item_counter"
		android:gravity="center"
		android:minHeight="?android:attr/listPreferredItemHeightSmall"
		android:padding="4dp"
		android:textAppearance="?android:attr/textAppearanceListItemSmall"
		android:textColor="@color/white_trans"
		android:textSize="12sp"
		android:textStyle="bold"
	/>
</LinearLayout>