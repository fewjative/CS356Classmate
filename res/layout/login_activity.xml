<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/cppgreen" >

	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:orientation="vertical"
	        android:padding="10dip" >

	        <TextView
	            style="@style/ClassmateTextView"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:labelFor="@+id/etEmailAddress"
	            android:text="@string/email" />

	        <EditText
	            android:id="@+id/etEmailAddress"
	            style="@style/ClassmateEditText_Email"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />

	        <TextView
	            style="@style/ClassmateTextView"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:labelFor="@+id/etPassword"
	            android:text="@string/password" />

	        <EditText
	            android:id="@+id/etPassword"
	            style="@style/ClassmateEditText_Password"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />

	        <CheckBox
	            android:id="@+id/cbRememberMe"
	            style="@style/ClassmateCheckBox"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/stayloggedin" />

	        <Button
	            android:id="@+id/btnLogin"
	            style="@style/ClassmateButton"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/login" />

	        <Button
	            android:id="@+id/btnRegister"
	            style="@style/ClassmateButton"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/register" />
	        
	        
            <com.facebook.widget.LoginButton
    			android:id="@+id/btnFacebookLogin"
     			android:layout_width="match_parent"
     			android:layout_height="wrap_content"
     			android:layout_marginTop="15dp"
     			android:layout_marginBottom="15dp"
     			android:layout_marginLeft="4dp"
     			android:layout_marginRight= "4dp" />
            
	    </LinearLayout>
        
   	    <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:background="@android:color/transparent"
	        android:orientation="vertical"
	        android:padding="5dip" >
            	        
       	    <TextView
		        android:id="@+id/txtRecover"
		        android:textColor="@color/cppgold_darker"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
   		        android:gravity="center"
		        android:text="@string/recover"
		        android:textSize="16sp" 
		        android:textStyle="bold" />
       	    
	        <TextView
	            android:id="@+id/created_by"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="@string/author"
	            android:textColor="@color/white" />
	        
	    </LinearLayout>
	    
	</RelativeLayout>

</ScrollView>
    