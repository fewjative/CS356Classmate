<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cppgreen"
        >
                <com.facebook.widget.LoginButton
           		 		android:id="@+id/btnFacebookLink"
            			android:layout_width="match_parent"
            			android:layout_height="wrap_content"
            			android:layout_marginTop="30dp"
            			android:layout_marginBottom="30dp"
            			android:layout_marginLeft="20dp"
            			android:layout_marginRight="20dp"
            	/>
                
                <LinearLayout
                        android:padding="10dip"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_below="@+id/btnFacebookLink"
                >
                        <TextView
                                style="@style/ClassmateTextView"
                                android:text="@string/oldPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:labelFor="@+id/etOldPass"
                        />
                        <EditText
                                style="@style/ClassmateEditText_Password"
                                android:id="@+id/etOldPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                        />
                        
                        <TextView
                                style="@style/ClassmateTextView"
                                android:text="@string/newPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:labelFor="@+id/etPassword"
                        />
                        <EditText
                                style="@style/ClassmateEditText_Password"
                                android:id="@+id/etPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                        />
                        <TextView
                                style="@style/ClassmateTextView"
                                android:text="@string/confirmnewpassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:labelFor="@+id/etConfirmPassword"
                        />
                        <EditText
                                style="@style/ClassmateEditText_Password"
                                android:id="@+id/etConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                        />
                        <TextView
                                style="@style/ClassmateTextView"
                                android:id="@+id/tvPasswordMatcher"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:gravity="center"
                        />
                        <Button
                                style="@style/ClassmateButton"
                                android:id="@+id/btnChangePass"
                                android:text="@string/changepassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                        />
                </LinearLayout>

        </RelativeLayout>
</ScrollView>