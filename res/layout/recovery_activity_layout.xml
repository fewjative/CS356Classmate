<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:baselineAligned="false"
		android:background="@color/custom_dark_back"
		android:padding="10dp"
	>
		<TextView
			style="@style/style_textview"
			android:text="@string/email_address"
			android:labelFor="@+id/etEmailAddress"
			android:textColor="@color/white"
		/>
		<EditText
			style="@style/style_edittext"
			android:id="@+id/etEmailAddress"
			android:layout_marginBottom="@dimen/login_component_spacing"
			android:text="John101@gmail.com"
		/>
		<Button
			style="@style/style_button"
			android:id="@+id/btnRecover"
			android:text="@string/recovery_action_recover"
			android:textColor="@color/white"
		/>
	</LinearLayout>
</ScrollView>