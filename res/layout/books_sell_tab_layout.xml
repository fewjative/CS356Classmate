<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true" >
    
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/custom_dark_back"
		android:orientation="vertical"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/custom_gray"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginBottom="5dp"
			android:orientation="vertical"
		>
			<TextView
				style="@style/style_textview"
				android:id="@+id/tvBookTitle"
				android:text="@string/book_title"
				android:layout_marginLeft="5dip"
				android:layout_marginTop="15dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/white"
			/>
		
			<EditText
				style="@style/style_edittext"
				android:id="@+id/etBookTitle"
				android:textColor="@color/white"
				android:layout_marginBottom="30dip"
				android:hint="@string/hint_title"
			/>
			
			<TextView
				style="@style/style_textview"
				android:id="@+id/tvBookClassname"
				android:text="@string/book_classname"
				android:layout_marginLeft="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/white"
			/>
		
			<EditText
				style="@style/style_edittext"
				android:id="@+id/etBookClassname"
				android:textColor="@color/white"
				android:layout_marginBottom="30dip"
				android:hint="@string/hint_class"
			/>
			
			<TextView
				style="@style/style_textview"
				android:id="@+id/tvBookCondition"
				android:text="@string/book_condition"
				android:layout_marginLeft="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/white"
			/>
		
			<EditText
				style="@style/style_edittext"
				android:id="@+id/etBookCondition"
				android:textColor="@color/white"
				android:layout_marginBottom="30dip"
				android:hint="@string/hint_condition"
			/>
			
			<TextView
				style="@style/style_textview"
				android:id="@+id/tvBookPrice"
				android:text="@string/book_price"
				android:layout_marginLeft="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/white"
			/>
		
			<EditText
				style="@style/style_edittext"
				android:id="@+id/etBookPrice"
				android:textColor="@color/white"
				android:layout_marginBottom="15dip"
				android:hint="@string/hint_price"
			/>
			
				<Button
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_gravity="center"
			android:id="@+id/btnSellBook"
			android:text="@string/book_sell_button"
			android:textColor="@color/white"
		/>
		</LinearLayout>
		
	
	</LinearLayout>

</ScrollView>
