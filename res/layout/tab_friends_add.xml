<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/cppgreen"
>
	<TextView
		android:id="@+id/tvAddAFriend"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="45dp"
		android:text="@string/addAFriend"
		android:textColor="@color/white"
		android:textAppearance="?android:attr/textAppearanceLarge"
	/>

	<TextView
		android:id="@+id/tvAddFriendHint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tvAddAFriend"
		android:layout_centerHorizontal="true"
		android:text="@string/addFriendHint"
		android:textColor="@color/cppgold"
		android:textAppearance="?android:attr/textAppearanceSmall"
	/>

	<Button
		android:id="@+id/btnAddFriend"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="94dp"
		android:text="@string/addFriend"
		android:textColor="@color/white"
	/>

	<EditText
		style="@style/ClassmateEditText_Username"
		android:id="@+id/etFriendName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/tvAddFriendHint"
		android:layout_marginTop="72dp"
		android:ems="10"
		android:textColor="@color/cppgold"
	>
		<requestFocus
		/>
	</EditText>
</RelativeLayout>