<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="20" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:text="Title" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="2"
                android:text="Description" />

            <DatePicker
                android:id="@+id/datePickerStartDate"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="11" 
                android:calendarViewShown="false"/>

            <EditText
                android:id="@+id/textFieldTitle"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:ems="10" />

            <EditText
                android:id="@+id/textFieldDescription"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="3"
                android:ems="10" />

            <TextView
                android:id="@+id/textViewStartDate"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="5"
                android:text="Start Date" />

            <TimePicker
                android:id="@+id/timePickerStartTime"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="15" />

            <TextView
                android:id="@+id/textViewEndDate"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="12"
                android:text="End Date" />

            <DatePicker
                android:id="@+id/datePickerEndDate"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="13" 
                android:calendarViewShown="false"/>

            <TextView
                android:id="@+id/textViewStartTime"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="14"
                android:text="Start Time" />

            <TextView
                android:id="@+id/textViewEndTime"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="16"
                android:text="End Time" />

            <TimePicker
                android:id="@+id/timePickerEndTime"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="17" />

            <Button
                android:id="@+id/btnCreateEvent"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="18"
                android:text="Create" />

            <RadioGroup
                android:id="@+id/radioGroupPrivacy"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="4" >

                <RadioButton
                    android:id="@+id/radioButtonOPublic"
                    android:checked="true"
                    android:text="Public(Event is visible to all)" />

                <RadioButton
                    android:id="@+id/radioButtonFPublic"
                    android:text="Public(Event is visible only to friends)" />

                <RadioButton
                    android:id="@+id/radioButtonPrivate"
                    android:text="Private" />
            </RadioGroup>

        </GridLayout>

    </LinearLayout>

</ScrollView>