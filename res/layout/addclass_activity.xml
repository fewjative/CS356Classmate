<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
>
	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:columnCount="2"
		android:stretchMode="columnWidth"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Term: "
			android:layout_gravity="right|center_vertical"
			android:labelFor="@+id/sTerm"
		/>

		<Spinner
			android:id="@+id/sTerm"
			android:spinnerMode="dropdown"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="College: "
			android:layout_gravity="right|center_vertical"
			android:labelFor="@+id/sCollege"
		/>

		<Spinner
			android:id="@+id/sCollege"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		/>

		<TextView
			android:id="@+id/courseView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Course: "
			android:layout_gravity="right|center_vertical"
			android:labelFor="@+id/sCourse"
		/>

		<Spinner
			android:id="@+id/sCourse"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		/>
	</GridLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="@color/UI_gray_base"
		android:layout_margin="5dp"
	>
		<LinearLayout
			android:id="@+id/llProgressBar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="gone"
			android:background="@android:color/transparent"
		>
			<ProgressBar
				style="Widget.ProgressBar.Large.Inverse"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			>
			</ProgressBar>
		</LinearLayout>

		<ListView
			android:id="@+id/lvSearchResults"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/UI_gray_base"
			android:divider="@color/gray"
			android:dividerHeight="2dp"
		>
		</ListView>
	</LinearLayout>
</LinearLayout>