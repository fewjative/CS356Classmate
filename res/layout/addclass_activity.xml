<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/termSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/termView" />

    <Spinner
        android:id="@+id/majorSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/majorView"
        android:layout_below="@+id/termSpinner" />

    <Spinner
        android:id="@+id/courseSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/majorSpinner"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/majorSpinner" />

    <TextView
        android:id="@+id/majorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/termView"
        android:layout_alignTop="@+id/majorSpinner"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Major: " />

    <TextView
        android:id="@+id/termView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/termSpinner"
        android:layout_marginLeft="22dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Term: " />

    <TextView
        android:id="@+id/courseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/courseSpinner"
        android:layout_toLeftOf="@+id/courseSpinner"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Course: " />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/courseView"
        android:layout_below="@+id/courseSpinner"
        android:layout_marginTop="31dp"
        android:text="Title: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="15dp"
        android:text="Meetings: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/meeting"
        android:layout_below="@+id/meeting"
        android:layout_marginTop="15dp"
        android:text="Time: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/professor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/times"
        android:layout_below="@+id/times"
        android:layout_marginTop="15dp"
        android:text="Professor: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/titleResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/title"
        android:layout_alignBottom="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="Class Title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/meetingResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/meeting"
        android:layout_alignBottom="@+id/meeting"
        android:layout_toRightOf="@+id/professor"
        android:text="Class days"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/timeResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/professor"
        android:layout_toRightOf="@+id/times"
        android:text="Time of Class"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/professorResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/professor"
        android:layout_toRightOf="@+id/professor"
        android:text="Professors name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:enabled="false"
        android:text="Add" />

</RelativeLayout>