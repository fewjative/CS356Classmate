<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/menu_row"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:animateLayoutChanges="true"
>
	<LinearLayout
	    android:id="@+id/innerLayout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:orientation="horizontal"
	>
	
    	<GridLayout
		android:id="@+id/gridForText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:columnCount="1"
		>

			
			<TextView
				android:id="@+id/tvClassNumber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:minHeight="?android:attr/listPreferredItemHeightLarge"
				android:textAppearance="?android:attr/textAppearanceListItemSmall"
				android:textColor="@color/cppgold"
				android:singleLine="true"
			/>
	
			<TextView
				android:id="@+id/tvClassTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textColor="@color/white"
				android:singleLine="true"
				android:ellipsize="marquee"
				android:marqueeRepeatLimit ="marquee_forever"
				android:scrollHorizontally="true"
				android:focusable="false"
			/>
		<!--			android:focusable="true"
					android:focusableInTouchMode="true"-->
		
			<TextView
				android:id="@+id/tvClassDays"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:minHeight="?android:attr/listPreferredItemHeightLarge"
				android:textAppearance="?android:attr/textAppearanceListItemSmall"
				android:textColor="@color/custom_light_blue"
				android:layout_marginRight="6dip"
				android:singleLine="true"
			/>
			
			<TextView
				android:id="@+id/tvCellClassTime"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:singleLine="true"
				android:fontFamily="serif"
			/>
		</GridLayout>

<!--		<ImageButton
			android:id="@+id/btnRemoveClass"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_cancel"
		/>-->
	</LinearLayout>

	<LinearLayout
		android:id="@+id/llExtendedInfo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:visibility="gone"
		android:background="@color/white"
	>
		<TextView
			android:id="@+id/tvClassTime"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceListItemSmall"
			android:textColor="@color/black"
			android:layout_marginLeft="6dip"
			android:singleLine="true"
		/>

		<TextView
			android:id="@+id/tvClassLecturer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceListItemSmall"
			android:textColor="@color/black"
			android:layout_marginLeft="6dip"
			android:singleLine="true"
		/>

		<Button
			style="@style/style_button"
			android:id="@+id/btnViewSectionDetails"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="View Details"
			android:textColor="@color/black"
			android:focusable="false"
			android:layout_marginTop="0dp"
			android:visibility="gone"
		/>

		<Button
			style="@style/style_button"
			android:id="@+id/btnRemoveClass"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Remove Class"
			android:textColor="@color/black"
			android:focusable="false"
			android:layout_marginTop="0dp"
		/>
	</LinearLayout>

</LinearLayout>