<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/menu_row"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/UI_gray_cell"
	android:animateLayoutChanges="true"
>
	<LinearLayout
	    android:id="@+id/innerLayout"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:orientation="horizontal"
	>
		<GridLayout 
		    android:id="@+id/gridForText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:columnCount="1"
		    >
		    
		    	<TextView
				android:id="@+id/tvClassNumber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textColor="@color/black"
				android:singleLine="true"
				android:textStyle="bold"
				android:fontFamily="arial"
				/>
		    	
		    	<TextView
				android:id="@+id/tvClassTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textColor="@color/UI_dark_gray"
				android:singleLine="true"
				android:ellipsize="marquee"
				android:marqueeRepeatLimit ="marquee_forever"
				android:scrollHorizontally="true"
				android:focusable="false"
				android:fontFamily="serif"
				/>
		    	
		    	<TextView
				android:id="@+id/tvClassDays"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textColor="@color/UI_dark_gray"
				android:singleLine="true"
				android:fontFamily="serif"
				/>
		    	
	   		   	<TextView
				android:id="@+id/tvCellClassTime"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/UI_dark_gray"
				android:singleLine="true"
				android:fontFamily="serif"
				/>
		</GridLayout>
		
