<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cppgreen"
>
        <LinearLayout
                android:id="@+id/llProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@android:color/transparent"
        >
                <ProgressBar
                        style="Widget.ProgressBar.Large.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                >
                </ProgressBar>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/llBothFree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/dashed_border"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:visibility="gone"
        >
                        <TextView
                                style="@style/style_textview"
                                android:text="You and your friend are free all day!"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                        />

        </LinearLayout>
        
        <LinearLayout
                android:id="@+id/llFriendFree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/dashed_border"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:visibility="gone"
        >
                        <TextView
                                style="@style/style_textview"
                                android:text="Your friend is free all day, plan around your schedule."
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                        />
                        
        </LinearLayout>
        

        <LinearLayout
                android:id="@+id/llFreeTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/cppgreen"
                android:visibility="gone"
        >
          
                        
         <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/white"
            android:text="You and your friend are free from:" 
            android:gravity="center"/>
         
                <LinearLayout
                        android:id="@+id/llProgressBarClasses"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="@android:color/transparent"
                >
                        <ProgressBar
                                style="Widget.ProgressBar.Large.Inverse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                        >
                        </ProgressBar>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                >
                        <ListView
                                android:id="@+id/lvFreeTime"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/cppgreen_darker"
                        >
                        </ListView>
                </LinearLayout>
        </LinearLayout>


</LinearLayout>