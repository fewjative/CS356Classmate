<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<item>
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
		>
			<gradient
				android:angle="90"
				android:startColor="@color/cppgreen_darker"
				android:endColor="@color/cppgreen"
				android:type="linear"
			/>
		</shape>
	</item>

	<item android:right="-2dp" android:left="-2dp" android:bottom="-2dp">
	    <shape>
		  <solid android:color="@android:color/transparent" />
		  <stroke
			android:width="1dp"
			android:color="@color/cppgreen_lite" />
	    </shape>
	</item>

	<item android:top="-2dp" android:right="-2dp" android:left="-2dp">
	    <shape>
		  <solid android:color="@android:color/transparent" />
		  <stroke
			android:width="1dp"
			android:color="@color/cppgreen_darker_darker" />
	    </shape>
	</item>
</layer-list>