<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="edu.csupomona.cs.cs356.classmate"
	android:versionCode="1"
	android:versionName="1.0"
>
	<!-- SDK Specifications -->
	<uses-sdk
		android:minSdkVersion="12"
		android:targetSdkVersion="16"
	/>

	<!--  Internet Permissions -->
	<uses-permission
		android:name="android.permission.INTERNET"
	/>

	<application
		android:debuggable="true"
		android:allowBackup="true"
		android:icon="@drawable/classmate_icon_cpp"
		android:label="@string/ClassmateAppName"
		android:theme="@style/ClassmateTheme"
	>
		<activity
			android:name="edu.csupomona.cs.cs356.classmate.LoginActivity"
			android:label="@string/ClassmateAppName"
			android:windowSoftInputMode="stateHidden"
		>
			<!--android:logo="@drawable/logo"-->
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
			android:name="edu.csupomona.cs.cs356.classmate.RecoveryActivity"
			android:label="@string/recover"
		>
		</activity>

		<activity
			android:name="edu.csupomona.cs.cs356.classmate.RegistrationActivity"
			android:label="@string/register"
		>
		</activity>

		<activity
			android:name="edu.csupomona.cs.cs356.classmate.MainMenu"
			android:label="@string/ClassmateAppName"
		>
		</activity>

		<activity
			android:name="edu.csupomona.cs.cs356.classmate.Schedule"
			android:label="@string/schedule"
		>
		</activity>

		<activity
		    android:name="edu.csupomona.cs.cs356.classmate.AddClassActivity"
		    android:label="@string/addClass"
		>
		</activity>

		<activity
		    android:name="edu.csupomona.cs.cs356.classmate.SearchClassActivity"
		    android:label="@string/searchClass"
		>
		</activity>

	</application>
</manifest>